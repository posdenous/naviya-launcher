<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/elderly_background_dark"
    tools:context=".MainActivity">

    <!-- Status Bar Container -->
    <LinearLayout
        android:id="@+id/status_bar_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_background"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Current Mode Display -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/current_mode_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_mode"
                android:textColor="@color/elderly_text_primary"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/current_mode_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode_comfort"
                android:textColor="@color/elderly_accent_green"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Status Indicators -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Connectivity Indicator -->
            <LinearLayout
                android:id="@+id/connectivity_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="16dp">

                <View
                    android:id="@+id/connectivity_dot"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/connectivity_dot"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/connectivity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/online"
                    android:textColor="@color/elderly_text_primary"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Unread Indicator -->
            <TextView
                android:id="@+id/unread_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/unread_badge"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginEnd="16dp" />

            <!-- Mode Switch Button -->
            <Button
                android:id="@+id/mode_switch_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/switch_mode"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="@drawable/elderly_button_primary"
                android:paddingHorizontal="16dp"
                android:contentDescription="@string/mode_switch_accessibility_desc"
                style="@style/ElderlyButton" />

        </LinearLayout>

    </LinearLayout>

    <!-- Main App Grid Container -->
    <FrameLayout
        android:id="@+id/app_grid_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@+id/emergency_button_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_bar_container">

        <!-- This will be populated by LauncherGridView Compose component -->
        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/launcher_grid_compose"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- Emergency SOS Button Container -->
    <LinearLayout
        android:id="@+id/emergency_button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- This will be populated by SOSButton Compose component -->
        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/emergency_button_compose"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>

    <!-- Loading Overlay -->
    <LinearLayout
        android:id="@+id/loading_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/elderly_overlay"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:indeterminateTint="@color/elderly_accent_green" />

        <TextView
            android:id="@+id/loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/initializing_launcher"
            android:textColor="@color/elderly_text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
