<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme definitions moved to themes.xml to avoid duplicates -->

    <!-- Elderly-friendly button style -->
    <style name="ElderlyButton" parent="Widget.Material3.Button">
        <!-- Minimum 48dp touch target following Windsurf rules -->
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        
        <!-- Large text for readability -->
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        
        <!-- High contrast colors -->
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/elderly_button_primary</item>
        
        <!-- Rounded corners for modern look -->
        <item name="cornerRadius">8dp</item>
        
        <!-- Adequate padding for touch targets -->
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        
        <!-- Elevation for depth perception -->
        <item name="elevation">4dp</item>
    </style>

    <!-- Emergency button style -->
    <style name="EmergencyButton" parent="ElderlyButton">
        <!-- Extra large for emergency situations -->
        <item name="android:minHeight">80dp</item>
        <item name="android:textSize">24sp</item>
        
        <!-- High contrast emergency colors -->
        <item name="backgroundTint">@color/elderly_emergency_red</item>
        <item name="android:textColor">@android:color/white</item>
        
        <!-- More prominent elevation -->
        <item name="elevation">8dp</item>
        
        <!-- Larger corner radius -->
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Text styles for elderly users -->
    <style name="ElderlyTextLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/elderly_text_primary</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="ElderlyTextMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/elderly_text_primary</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="ElderlyTextSmall">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/elderly_text_secondary</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <!-- Card style for tiles and containers -->
    <style name="ElderlyCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/elderly_surface_dark</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Status indicator styles -->
    <style name="StatusIndicator">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/elderly_text_primary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Mode selection dialog style -->
    <style name="ModeSelectionDialog" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="android:windowBackground">@color/elderly_surface_dark</item>
        <item name="android:textColorPrimary">@color/elderly_text_primary</item>
        <item name="android:textColorSecondary">@color/elderly_text_secondary</item>
    </style>
</resources>
