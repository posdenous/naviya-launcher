<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Disable cloud backup for elderly user privacy -->
        <exclude domain="root" />
        <exclude domain="database" />
        <exclude domain="sharedpref" />
        <exclude domain="external" />
    </cloud-backup>
    <device-transfer>
        <!-- Allow device transfer for elderly user convenience -->
        <include domain="sharedpref" path="." />
        <exclude domain="database" />
    </device-transfer>
</data-extraction-rules>
